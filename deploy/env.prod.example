# RiverEdge 生产环境环境变量
# 复制为 .env 并填入实际值，放置于 /opt/riveredge/.env

# 公网域名（Caddy 自动 HTTPS）
DOMAIN=kuaigeyun.com

# 数据库密码（Postgres，必填）
DB_PASSWORD=

# Redis 密码（可选，留空则无密码）
REDIS_PASSWORD=

# Inngest 自建服务密钥（必填，用 openssl rand -hex 32 生成）
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# 平台超级管理员（首次启动自动创建，必填）
INFRA_SUPERADMIN_USERNAME=infra_admin
INFRA_SUPERADMIN_PASSWORD=platmaster@2026
INFRA_SUPERADMIN_EMAIL=infra_admin@riveredge.cn
INFRA_SUPERADMIN_FULL_NAME=平台超级管理员
