[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    venv311,
    .eggs,
    *.egg,
    build,
    dist,
    migrations,
    .mypy_cache,
    .pytest_cache
ignore =
    E501,  # line too long, handled by black
    W503,  # line break before binary operator
    E203,  # whitespace before ':', handled by black
per-file-ignores =
    __init__.py:F401

